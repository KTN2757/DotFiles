[global]
    # Position
    monitor = 0
    follow = none
    origin = top-right
    offset = 30x30
    geometry = "420x120-40+40"

    # Visuals
    transparency = 5
    corner_radius = 12
    frame_width = 3
    separator_height = 2
    separator_color = auto

    # Padding & spacing
    padding = 16
    horizontal_padding = 20
    line_height = 0
    vertical_alignment = center

    # Font & text layout
    font = CaskaydiaCove NFM 11
    markup = full
    format = "<span font='CaskaydiaCove NFM 11' weight='bold' color='{color6}'>%s</span>\n<span font='CaskaydiaCove NFM 10' color='{foreground}'>%b</span>"
    alignment = center
    ellipsize = end
    word_wrap = yes

    # Behavior
    indicate_hidden = yes
    shrink = no
    idle_threshold = 120
    sort = yes
    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = yes

    # Icons
    icon_position = left
    max_icon_size = 48
    icon_path = /usr/share/icons/Adwaita/32x32/status/:/usr/share/icons/Adwaita/32x32/devices/:/usr/share/icons/Adwaita/32x32/actions/

    # Interaction
    mouse_left_click = do_action
    mouse_middle_click = close_all
    mouse_right_click = close_current

    # Misc
    title = Dunst
    class = Dunst
    sticky_history = yes
    history_length = 20
    always_run_script = true
    show_age_threshold = 60
    force_xinerama = false

